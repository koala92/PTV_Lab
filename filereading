import sys
import numpy as np
import glob
files = list
#filepath = input()
def rdfunction(filepath):
    from os import listdir
    from os.path import isfile, join
    files = ['filepath' + f for f in listdir(filepath) if isfile(join(filepath,f))]
    return files
# if __name__ == "__main__":
print(sys.argv)
print (rdfunction(sys.argv[1]))
